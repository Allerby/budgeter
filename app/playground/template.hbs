{{#each model as |slide|}}
  <div class="max-w-sm rounded overflow-hidden shadow-lg">
    <img class="w-full" src="/illustrations/{{slide.image}}" alt="{{title}}">
    <div class="px-6 py-4">
      <div class="font-bold text-black text-xl mb-2">{{slide.title}}</div>
      <p class="text-black text-base">
        {{slide.description}}
      </p>
    </div>
    <div class="px-6 py-4">
      {{#each slide.tags as |tag|}}
        <span class="inline-block bg-grey-light rounded-full px-3 py-1 text-sm font-semibold text-black mr-2">{{tag}}</span>
      {{/each}}
    </div>
  </div>
{{/each}}