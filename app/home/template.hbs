{{#if firebaseSession.isAuthenticated}}

  {{bank-list 
    onSelect=(action 'selectBank')
    selectedBank=selectedBank
  }}

  <h3 class="text-center">Selected Bank: {{selectedBank}}</h3>

  {{#if selectedBank}}
    {{file-upload 
      transactions=transactions
      selectedBank=selectedBank  
    }}
  {{/if}}

  {{transaction-list 
    transactions=transactions
    selectedBank=selectedBank  
  }}

{{/if}}