<div class='flex h-screen flex-row {{if (or selectCategory createNewTag) 'blur'}}'>
  <div id='navigation' class='bg-primary-4 flex-none' style='width: 216px'>
    <img class='w-24 block mx-auto mt-8' src='/logo@2x.png' />

    <div class='ml-4 mr-4'>
      <hr class='border-t flex-grow mt-10 border-shade-3 opacity-25'>

      <div class='flex justify-between mt-10 text-correct leading-normal'>
        <p>Choose your tool</p>
        <i class='icon check'></i>
      </div>

      <div class='flex justify-between h-6 mt-6 text-white leading-normal'>
        {{#if (gt currentUser.user.csv_uploads.length 0)}}
          <p class='text-correct'>Upload CSV</p>
          <i class='icon check'></i>
        {{else}}
          <p>Upload CSV</p>
          <p>0%</p>
        {{/if}}
      </div>

      <div class='flex justify-between h-6 mt-6 text-white leading-normal'>
        <p class='opacity-25'>Categorise</p>
        <p class='opacity-25'>{{progressPercentage}}</p>
      </div>

      <div class='flex justify-between h-6 mt-6 text-white leading-normal'>
        <a onclick={{action 'logout'}}>Logout</a>
      </div>
    </div>
  </div>

  <div class='flex mx-auto'>
    {{outlet}}
  </div>
</div>

{{#if selectCategory}}
  <CategoryPicker 
    @changeCategory={{action 'changeCategory'}}
    @createNewTag={{action 'openTagCreate'}}
  />
{{/if}}

{{#if createNewTag}}
  <CreateNewTag @changeCategory={{action 'changeCategory'}} />
{{/if}}