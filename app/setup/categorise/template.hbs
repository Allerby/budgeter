<div class='flex flex-col'>
  <h1 class='text-center text-primary-2 mt-10'>Categorise your spending</h1>
  <p class='text-center body-1 text-primary-2 mt-4'>Tag your transactions with a category</p>

  <TransactionSlider 
    @transactions={{groupedTransactions}}
    @currentTransactionGroup={{currentTransactionGroup}}
    @selectCategory={{selectCategory}}
    @changeCategory={{changeCategory}}
  />

  <div class='flex flex-1 mb-14'>
    <div class='flex w-full flex-col-reverse'>
      <div class='mx-auto'>
        <button class='btn-secondary hover:btn-secondary-hover w-56' {{action 'skipTransaction'}}>Skip transaction</button>
      </div>
    </div>
  </div>
</div>
